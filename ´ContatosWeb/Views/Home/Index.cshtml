@{
    ViewData["Title"] = "Contatos";
}

@model ContatoModels

<h1>Lista de contato</h1>
<a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Novo">Adicionar novo contato</a>
<p>@TempData["res"]</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (var c in Model.GetContatos())
            {
                <tr>
                    @if (c.Id < 10)
                    {
                        <td style="color:white;background-color:tomato">0 @c.Id</td>
                    }
                    else
                    {
                        <td style="color:white;background-color:tomato">@c.Id</td>
                    }
                    <td>@c.Nome</td>
                    <td><a href="mailto:@c.Email">@c.Email</a></td>
                    <td>@c.Telefone</td>
                </tr>
            }
        }
    </tbody>

</table>
